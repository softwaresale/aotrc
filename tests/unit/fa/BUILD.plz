
cc_library(
    name="fa-test",
    srcs=["fa_base_test.cc"],
    hdrs=["fa_base_test.h"],
    deps=[
        "///thirdparty/gtest//:gtest",
        "//src/fa:libaotrc-fa",
        "//src/parser:libaotrc-parser",
    ],
    test_only=True,
)

def aotrc_fa_unit_test(name: str):
    return cc_test(
        name=name,
        srcs=[f"{name}.cc"],
        deps=[":fa-test",]
    )

aotrc_fa_unit_test("fa_alternation_literal")
